podman run --name kafka -e ALLOW_PLAINTEXT_LISTENER=yes -e KAFKA_CFG_ADVERTISED_LISTENERS=PLAINTEXT://172.18.64.1:9092,INT://kafka:9094 -e KAFKA_CFG_CONTROLLER_LISTENER_NAMES=CONTROLLER -e KAFKA_CFG_CONTROLLER_QUORUM_VOTERS=0@kafka:9093 -e KAFKA_CFG_INTER_BROKER_LISTENER_NAME=INT -e KAFKA_CFG_LISTENERS=PLAINTEXT://:9092,CONTROLLER://:9093,INT://9094 -e KAFKA_CFG_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT,INT:PLAINTEXT -e KAFKA_CFG_MESSAGE_MAX_BYTES=5000000 -e KAFKA_CFG_NODE_ID=0 -e KAFKA_CFG_PROCESS_ROLES=controller,broker -e KAFKA_CFG_RETENTION_MS=3600000 -p 9092:9092 -p 9093:9093 -p 9094:9094 -v /mnt/c/podman/kafka/data:/bitnami/kafka/data -d bitnami/kafka:3.4


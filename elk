podman run --network=ps --name elasticsearch -e ELASTIC_PASSWORD=elasticsearch -e node.name=es01 -e xpack.security.enabled=false -e xpack.security.http.ssl.enabled=false -e xpack.security.transport.ssl.enabled=false -e cluster.initial_master_nodes=es01 -e cluster.name=elasticsearch -v /mnt/c/podman/elasticsearch/data:/usr/share/elasticsearch/data -p 9200:9200 -d docker.elastic.co/elasticsearch/elasticsearch:8.17.5

podman run --network=ps --name kibana -e ELASTICSEARCH_HOSTS=http://elasticsearch:9200 -e ELASTICSEARCH_PASSWORD=elasticsearch -e ELASTICSEARCH_USERNAME=kibana_system -e SERVERNAME=kibana -p 5601:5601 -d docker.elastic.co/kibana/kibana:8.17.5

podman run --network=ps --name logstash -v /mnt/c/podman/logstash/conf/logstash.yml:/usr/share/logstash/config/logstash.yml -v /mnt/c/podman/logstash/conf/pipelines.yml:/usr/share/logstash/config/pipelines.yml -v /mnt/c/podman/logstash/conf/http_to_kafka.conf:/etc/conf.d/logstash/http_to_kafka.conf -v /mnt/c/podman/logstash/data:/usr/share/logstash/data -p 4560:4560 -p 4562:4562 -p 8600:9600 -d docker.elastic.co/logstash/logstash:8.12.1

podman run --name kafka -e ALLOW_PLAINTEXT_LISTENER=yes -e KAFKA_CFG_ADVERTISED_LISTENERS=PLAINTEXT://10.88.0.1:9092 -e KAFKA_CFG_CONTROLLER_LISTENER_NAMES=CONTROLLER -e KAFKA_CFG_CONTROLLER_QUORUM_VOTERS=0@10.88.0.1:9093 -e KAFKA_CFG_INTER_BROKER_LISTENER_NAME=PLAINTEXT -e KAFKA_CFG_LISTENERS=PLAINTEXT://:9092,CONTROLLER://:9093 -e KAFKA_CFG_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT -e KAFKA_CFG_MESSAGE_MAX_BYTES=5000000 -e KAFKA_CFG_NODE_ID=0 -e KAFKA_CFG_PROCESS_ROLES=controller,broker -e KAFKA_CFG_RETENTION_MS=3600000 -p 9092:9092 -p 9093:9093 -v /mnt/c/Users/minh.tran/podman/kafka/data:/bitnami/kafka -d bitnami/kafka:3.4
